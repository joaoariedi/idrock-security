# NexShop E-commerce Service Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=NexShop E-commerce Service

# Database Configuration
DATABASE_URL=sqlite:./nexshop.db
DATABASE_LOGGING=false

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h

# IDROCK Security Service Integration
IDROCK_API_URL=http://localhost:8000
IDROCK_API_KEY=demo-api-key-12345
IDROCK_TIMEOUT=5000

# Security Settings
SESSION_SECRET=your-session-secret-change-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true